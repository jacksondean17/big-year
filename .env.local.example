NEXT_PUBLIC_SUPABASE_URL=your-supabase-url-here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Only needed for running the seed script (npm run seed)
SUPABASE_SECRET_KEY=your-secret-key-here

# Discord Bot Configuration (for fetching server nicknames)
# Create a bot at https://discord.com/developers/applications
# Enable "Server Members Intent" and invite bot to your server
DISCORD_BOT_TOKEN=your-bot-token-here
DISCORD_GUILD_ID=your-guild-id-here
DISCORD_COMPLETIONS_CHANNEL_ID=your-completions-channel-id-here

# Google Calendar (for /schedule page)
# Create a public Google Calendar and copy its Calendar ID from settings
NEXT_PUBLIC_GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com

# Admin UI (for /admin route — challenge create/edit)
# Comma-separated list of Supabase user UUIDs that can access /admin
# Find UUIDs in Supabase dashboard → Auth → Users
ADMIN_USER_IDS=uuid-one,uuid-two

# Cloudflare R2 (for completion proof uploads)
# Create a bucket in Cloudflare R2 and generate API tokens with read/write access
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=big-year-uploads
R2_PUBLIC_URL=https://your-r2-public-url.example.com

# Claude API (for AI-generated Discord completion messages)
CLAUDE_API_KEY=your-claude-api-key-here
